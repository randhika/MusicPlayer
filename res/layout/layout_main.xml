<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

	<android.support.v4.widget.DrawerLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/drawer_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        
		        <ImageView
		            android:id="@+id/imageViewSongImage"
		            android:layout_width="60dp"
		            android:layout_height="60dp"
		            android:scaleType="fitCenter"
		            android:visibility="gone" />
		
			    <LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginLeft="2dp"
					android:layout_marginRight="2dp"
					android:paddingTop="5dp" >
			        
			           <TextView
			               android:id="@+id/textViewArtist"
			               android:layout_width="fill_parent"
			               android:layout_height="wrap_content"
			               android:text="@string/noSong"
			               android:textAppearance="?android:attr/textAppearanceMedium" />
			
			           <TextView
			               android:id="@+id/textViewTitle"
			               android:layout_width="wrap_content"
			               android:layout_height="wrap_content"
			               android:textAppearance="?android:attr/textAppearanceMedium"
			               android:textStyle="bold"
			               android:lines="2" />
			
			    </LinearLayout>
			    
			</LinearLayout>
		    
		    <SeekBar
		        android:id="@+id/seekBar"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        style="@style/MySeekBar" />
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp" >
		
		        <ImageButton
		            android:id="@+id/imageButtonPrevious"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/previous"
		            android:contentDescription="@string/previous"
		            android:layout_marginLeft="3dp"
		            android:background="@drawable/orange_button" />
		
		        <ImageButton
		            android:id="@+id/imageButtonPlayPause"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/play"
		            android:contentDescription="@string/play"
		            android:layout_marginLeft="3dp"
		            android:background="@drawable/orange_button" />
		
		        <ImageButton
		            android:id="@+id/imageButtonNext"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/next"
		            android:contentDescription="@string/next"
		            android:layout_marginLeft="3dp"
		            android:background="@drawable/orange_button" />
		        
		        <ImageButton
		            android:id="@+id/imageButtonToggleExtendedMenu"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/expand"
		            android:contentDescription="@string/next"
		            android:layout_marginLeft="3dp"
		            android:background="@drawable/orange_button" />
		
		        <TextView
		            android:id="@+id/textViewTime"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:textSize="@dimen/textViewTimeSize" />
		
		    </LinearLayout>
		    
		    <HorizontalScrollView
		        android:id="@+id/extendedMenu"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:scrollbars="none"
		        android:visibility="gone"
		        android:layout_marginBottom="5dp" >
		    
			    <LinearLayout
			        android:orientation="horizontal"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content" >
			
			        <ImageButton
			            android:id="@+id/imageButtonShuffle"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/shuffle"
			            android:background="@drawable/orange_button"
			            android:layout_marginLeft="5dp" />
			        
			        <ImageButton
			            android:id="@+id/imageButtonRepeat"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/repeat"
			            android:background="@drawable/orange_button"
			            android:layout_marginLeft="5dp" />
			        
			        <ImageButton
			            android:id="@+id/imageButtonRepeatAll"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/repeatall"
			            android:background="@drawable/orange_button"
			            android:layout_marginLeft="5dp" />
			        
			        <Button
			            android:id="@+id/buttonBassBoost"
			            android:layout_width="wrap_content"
			            android:layout_height="fill_parent"
			            android:text="@string/bassBoostButton"
			            android:textColor="@color/white"
			            android:background="@drawable/orange_button"
			            android:layout_marginLeft="5dp" />
			        
			        <Button
			            android:id="@+id/buttonEqualizer"
			            android:layout_width="wrap_content"
			            android:layout_height="fill_parent"
			            android:text="@string/equalizerButton"
			            android:textColor="@color/white"
			            android:background="@drawable/orange_button"
			            android:layout_marginLeft="5dp" />
			        
			        <Button
			            android:id="@+id/buttonShake"
			            android:layout_width="wrap_content"
			            android:layout_height="fill_parent"
			            android:text="@string/shake"
			            android:textColor="@color/white"
			            android:background="@drawable/orange_button"
			            android:layout_marginLeft="5dp" />
			        
			    </LinearLayout>
		    
		    </HorizontalScrollView>
		    
	        <FrameLayout
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:id="@+id/page" />
		
		</LinearLayout>
		
		<RelativeLayout
		    android:id="@+id/navigation_container"
		    android:layout_width="240dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="start"
	        android:background="@color/navigationBackground" >
	        
		    <LinearLayout
		        android:id="@+id/navigation_buttonQuit"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:padding="10dp" >
		        <ImageView
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingRight="10dp"
			        android:src="@drawable/navigation_cancel" />
			    <TextView
				    android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/quit"
			        android:textColor="@color/navigationTextColor"
	        		android:textAppearance="?android:attr/textAppearanceLarge" />
		    </LinearLayout>
		    
			<ListView
				android:id="@+id/navigation_list"
		        android:layout_width="match_parent"
		        android:layout_height="fill_parent"
		        android:choiceMode="singleChoice"
		        android:layout_above="@id/navigation_buttonQuit" />
		
		</RelativeLayout>
		
	</android.support.v4.widget.DrawerLayout>

</FrameLayout>
